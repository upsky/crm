template(name='Task')
   if isEditing
      form.form
         .form-group
            input.form-control(type='text' name='name' value='#{data.name}')
         .form-group
            textarea.form-control(name='content') #{data.content}

         button.btn.btn-primary(type='submit')
            span.glyphicon.glyphicon-ok
         a#remove.btn.btn-danger.btn-sm(href='#')
            span.glyphicon.glyphicon-remove

   else
      p !{data.name}
      p !{data.content}

template(name='TaskToolbar')
   a#add.btn.btn-default(href='#') T
