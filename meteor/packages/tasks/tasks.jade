template(name='Task')
   .panel.panel-default
      if editState
         form.thread.form
            .panel-body
               .form-group
                  input.form-control(type='text' name='name' value='#{data.name}')
               .form-group
                  textarea.form-control(name='content') #{data.content}

            .panel-footer
                  button#save.btn.btn-primary(type='submit')
                     span.glyphicon.glyphicon-ok
      else
         .panel-heading.clearfix
            h3.panel-title.pull-left !{data.name}

            .btn-group.pull-right
               a#edit.btn.btn-default.btn-sm(href='#')
                  span.glyphicon.glyphicon-pencil
               a#remove.btn.btn-danger.btn-sm(href='#')
                  span.glyphicon.glyphicon-remove

         .panel-body
            !{data.content}

template(name='TaskUpdate')
   .panel.panel-default
      .panel-heading
         .panel-title
            input(type='text')
            a#title-save Save
      .panel-body
         textarea content

template(name='TaskToolbar')
   a#add.btn.btn-default(href='#')
      span.glyphicon.glyphicon-plus
