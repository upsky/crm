template(name='Wiki')
    if isEditing
        form.form
            .form-group
                +MarkdownEditor
            button.btn.btn-primary(type='submit')
                span.glyphicon.glyphicon-ok
            .btn-group.pull-right
                a#remove-wiki.btn.btn-danger.btn-sm(href='#')
                    span.glyphicon.glyphicon-remove

    else
        +markdown
            !{data.content}

template(name='WikiToolbar')
    a#add-wiki.btn.btn-default(href='#') W

template(name='MarkdownEditor')
    textarea.form-control(name='content') #{data.content}