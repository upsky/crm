template(name='People')
    if isEditing
        form.thread.form
            .form-group
                span First name
                input.form-control(type='text' name='firstname' value='#{data.firstname}')
            .form-group
                span Last name
                input.form-control(type='text' name='lastname' value='#{data.lastname}')
            .form-group
                span Email
                input.form-control(type='text' name='email' value='#{data.email}')
            button#save.btn.btn-primary(type='submit')
                span.glyphicon.glyphicon-ok
            button#cancel.btn.btn-primary(type='button')
                span.glyphicon.glyphicon-ban-circle
            button#remove.btn.btn-danger.btn-sm(type='button')
                span.glyphicon.glyphicon-remove

    else
        +avatar email=data.email
        | Name: !{data.firstname}
        br
        | Last name: !{data.lastname}
        br
        | Email: !{data.email}


template(name='PeopleUpdate')
    .panel.panel-default
        .panel-heading
            .panel-title
                input(type='text')
                a#title-save Save
        .panel-body
            textarea content

template(name='PeopleToolbar')
    a#add.btn.btn-default(href='#')
        span.glyphicon.glyphicon-user
